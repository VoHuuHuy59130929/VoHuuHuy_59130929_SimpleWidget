<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:layout_margin="10dp"
  tools:context=".MainActivity">

  <TextView
    android:id="@+id/textView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Tên của bạn" />

  <EditText
    android:id="@+id/editTen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ems="10"
    android:hint="Nhập tên bạn vào đây"
    android:inputType="text" />

  <TextView
    android:id="@+id/textView2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Ngày sinh" />

  <EditText
    android:id="@+id/editNgaySinh"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ems="10"
    android:hint="Nhập ngày sinh vào đây"
    android:inputType="date" />
  <TextView
    android:id="@+id/textView3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Giới tính" />
  <RadioGroup
    android:id="@+id/rdgGioiTinh"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RadioButton
      android:id="@+id/rdGTNam"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:text="Nam"
      android:checked="true"
      android:layout_weight="1"/>

    <RadioButton
      android:id="@+id/rdGTNu"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:text="Nữ"
      android:layout_weight="1"/>

  </RadioGroup>
  <TextView
    android:id="@+id/textView4"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Sở thích của bạn" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <CheckBox
      android:id="@+id/chkBoxST1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Xem phim" />

    <CheckBox
      android:id="@+id/chkBoxST2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Nghe nhạc" />

    <CheckBox
      android:id="@+id/chkBoxST3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Đi cafe với bạn bè" />

    <CheckBox
      android:id="@+id/chkBoxST4"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Ở nhà một mình" />

    <CheckBox
      android:id="@+id/chkBoxST5"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Vào bếp nấu ăn" />
    <TextView
      android:id="@+id/textView5"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Sở thích khác" />
    <EditText
      android:id="@+id/editSTKhac"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:ems="10"
      android:hint="Nhập sở thích khác"
      android:inputType="text" />
  </LinearLayout>
  <Button
    android:id="@+id/btnXacNhan"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Xác nhận"
    android:layout_gravity="center"
    android:layout_marginTop="10sp"/>
</LinearLayout>